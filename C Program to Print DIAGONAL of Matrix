#include<stdio.h>
int main()
{
    int a[4][4], i, j;
    
    
    
    printf("Enter 4*4 Matrix Elements:- ");
    for(i=0; i<4; i++)
    {
        for(j=0; j<4; j++)
        {
            scanf("%d", &a[i][j]);
        }
    }
    
    
    printf("\nEntered matrix is \n");
     for(i=0;i<4;i++)
     {
         for(j=0;j<4;j++)
         {
             printf("%d \t",a[i][j]);
         }printf("\n");
     }printf("\n");
        
    printf("\nDiagonal of given Matrix is:\n");
    
    for(i=0; i<4; i++)
    {
        for(j=0; j<4; j++)
        {   
            
            if(i == j)
            {
            printf("%d  ", a[i][j]);
            }
            else
            printf("   ");
        }
        printf("\n");
    }
}
