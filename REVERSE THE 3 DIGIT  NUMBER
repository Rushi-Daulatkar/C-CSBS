// This program reverses the number entered by the user
//The code is as follows
#include <stdio.h>

int main() 
{  
    int d1,d2,d3,num,rev,ori;
    
    printf("Enter any three digit number :");
    scanf("%d",&num);
    
    ori=num;
    
    d1=num%10;
    num=num/10;
    
    d2=num%10;
    num=num/10;
    
    d3=num%10;
    
    rev = d1*100 + d2*10 + d3;
    
    printf("\n The reverse of the number %d is %d",ori,rev);

    return 0;
}
